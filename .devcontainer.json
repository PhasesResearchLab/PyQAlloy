{
    "image": "ghcr.io/mamba-org/micromamba-devcontainer:git-515d637-jammy",
    "customizations": {
      "codespaces": {
        "openFiles": [
          "README.md"
        ]
      },
      "vscode": {
        "extensions": [
          "wijmo.gc-excelviewer",
          "mechatroner.rainbow-csv",
          "ms-python.python",
          "ms-toolsai.jupyter"
        ],
        "settings": {
          "python.defaultInterpreterPath": "/opt/micromamba/bin/python"
        }
      }
    },
    "hostRequirements": {
       "cpus": 4,
       "memory": "16gb",
       "storage": "16gb"
    },
    "onCreateCommand": [
      "eval \"$(micromamba shell hook --shell bash)\"",
      "micromamba activate",
      "micromamba config append channels conda-forge",
      "micromamba config set channel_priority strict",
      "micromamba install -y python=3.11 jupyter pyqalloy",
      "pip install -e ."
    ]
}
