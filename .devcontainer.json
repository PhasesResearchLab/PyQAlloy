{
    "image": "mcr.microsoft.com/devcontainers/miniconda",
    "customizations": {
      "codespaces": {
        "openFiles": [
          "README.md"
        ]
      },
      "vscode": {
        "extensions": [
          "wijmo.gc-excelviewer",
          "mechatroner.rainbow-csv",
          "ms-python.python",
          "ms-toolsai.jupyter"
        ]
      }
    },
    "hostRequirements": {
       "cpus": 4,
       "memory": "16gb",
       "storage": "16gb"
    },
    "onCreateCommand": "conda install -c conda-forge -y python=3.11 jupyter pyqalloy && pip install -e ."
}
